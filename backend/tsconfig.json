{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,

        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": false,
        "moduleDetection": "force",
        "noEmit": true,

        "outDir": "./dist",
        "rootDir": "./api",
        "strict": true
    }
}
